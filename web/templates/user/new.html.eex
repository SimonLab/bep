<h1>Sign Up</h1>
<%= if @changeset.action do %>
  <div class="alert alert-danger">
    <p>Oops, something whent wrong!</p>
  </div>
<%= end %>

<%= form_for @changeset, user_path(@conn, :create), fn f -> %>
  <%= text_input f, :email, placeholder: "example@email.com" %>
  <%= error_tag f, :email %>

  <%= password_input f , :password, placeholder: "Password", class: "round-input"%>
  <%= error_tag f,:password %>
  <%= submit "Start Searching" %>
<% end %>
