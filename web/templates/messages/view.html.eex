<div class="pt2 pt5-l pb4 mt4 w-80 w-50-ns center">
<p class="tc">user <%= @to_user %> </p>
  <%= for message <- @messages do %>
    <div class="">
      <p class="b"><%= message.subject %></p>
      <p><%= message.body %></p>
    </div>
  <% end %>
</div>

<div class="pt4">
  <%= link("Create new message", to: sa_messages_path(@conn, :new, [to_user: @to_user]),
    class: "white ph4 pv3 ba br2 link db mb4 center pointer bg-red") %>
</div>
